<% if @perfumn.errors.any? %>
    <p class="error"> Tivemos um erro </p>
<% end %>
<%= form_with model: perfumn, data: { turbo: false } do |form| %>
    <div class="form">
        <div class="form-group">
            <%= form.label :description,"Descrição: " %>
            <div class="form-item">
                <%= form.text_field :description %>
            </div>
        </div>
        <div class="form-group"> 
            <%= form.label :price, "Preço: " %>
            <div class="form-item">
                <%= form.number_field :price, step: :any %>
            </div>
        </div>
        <div class="form-group">
            <%= form.label :quality, "Qualidade: " %>
            <div class="form-item">
                <%= form.select :quality, ["Péssimo","Ruim","Mediano","Bom","Excelente"]%>
            </div>
        </div>
        <div class="form-group">
            <%= form.label :review, "Review do perfume: " %>
            <div class="form-item">
                <%= form.text_area :review %>
            </div>
        </div>
        <div class="form-group">
            <%= form.label :url_image, "Imagem: " %>
            <div class="form-item">
                <%= form.url_field :url_image %>
            </div>
        </div>
        <%= form.submit "#{type}", class: "bg-transparent hover:bg-blue-500 text-blue-700 font-semibold hover:text-white py-2 px-4 border border-blue-500 hover:border-transparent rounded mt-2"%>
    </div>
<% end %>
